{
    "compilerOptions": {
		"lib": ["es6", "dom"],
		"noImplicitThis": true,
		"strictNullChecks": true,
		"module": "commonjs",
		"noImplicitAny": false,
		"removeComments": true,
		"sourceMap": true,
		"jsx": "react",
		"target": "es5",
		"baseUrl": ".",
		"resolveJsonModule": true,
		"paths": {
			"@com/*": ["./src/components/*"],
			"@pages/*": ["./src/pages/*"],
			"@router/*": ["./src/router/*"],
			"@utils/*": ["../src/utils/*"],
			"@api": ["./src/utils/api"],
			"@tools": ["./src/utils/tools"],
			"@actions/*": ["./src/store/actions/*"],
			"@styled/*": ["./src/styled-components/*"],
			"@hooks/*": ["./src/hooks/*"],
		},
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules"
	]
}