{
    "compilerOptions": {
		"lib": ["es6", "dom"],
		"noImplicitThis": true,
		"strictNullChecks": true,
		"module": "commonjs",
		"noImplicitAny": false,
		"removeComments": true,
		"sourceMap": true,
		"jsx": "react",
		"target": "es5",
		"baseUrl": ".",
		"paths": {
			"@com/*": ["./src/components/*"],
			"@pages/*": ["./src/pages/*"],
			"@router/*": ["./src/router"],
			"@api": ["./src/utils/api"]
		},
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules"
	]
}